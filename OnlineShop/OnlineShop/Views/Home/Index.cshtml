@model OnlineShop.Models.Home.HomeIndexViewModel
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Home Page";
}

<div class="container">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item">
                <img src="~/Images/bike_slider1.jpg" alt="bike2" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Be strong</h3>
                    
                </div>
            </div>

            <div class="item">
                <img src="~/Images/bike_slider2.jpg" alt="bike1" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Never Doubt Yourself</h3>
                    
                </div>
            </div>

            <div class="item active">
                <img src="~/Images/bike_slider3.jpg" alt="bike3" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Let's Grind</h3>
                    <p>Let's do what you want to do right now!!!</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="search">
    <h2>Tìm sản phẩm</h2>
    <form method="post">
        <div class="inputSearch">
            <input class="contentSearch" name="search" type="text" placeholder="Nhập tên sản phẩm tại đây" >
            <button class="buttonSearch" type="submit">
                <img src="~/Images/searchIcon.png" />
            </button>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Sản phẩm<small>Hot trend</small></h2>
        </div>
    </div>
      
</div>

<div class="row product-container">
    @foreach (var i in Model.list_product)
    {
        <div class="col-md-3 col-sm-6 col-xs-12" >
            <div class="thumbnail">
                <a href="#">

                    <img src="~/Products/@i.ProductImage" class="img-thumbnail" alt="xe1" />
                    <p class="chi_tiet_sp">Xem chi tiết</p>
                </a>

                <a href="#">@i.ProductName </a>
                <p><span style="text-decoration:line-through;color:orangered">@(i.Price - 100)  </span><span style="color:orangered; margin-left:5px;">@i.Price</span></p>

                @{
                    if (i.Quantity > 0)
                    {
                        using (Html.BeginForm("add_to_cart", "Home",new { productId=i.ProductId},FormMethod.Post))
                        {
                            <button class="pull-right" type="submit"><i class="fa fa-shopping-cart"></i></button>
                        }

                        <p>Còn hàng</p>
                    }
                    else
                    {
                        <p>Hết hàng</p>
                    }
                }


                <div class="tinh-trang">@(i.IsFeatured == true ? "New" : "Old")</div>
            </div>
        </div>
    }

    </div>
<div class="container">
    @Html.PagedListPager(Model.list_product, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayItemSliceAndTotal = true })
</div>

